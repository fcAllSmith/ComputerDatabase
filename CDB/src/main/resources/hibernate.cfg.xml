<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory
        name="java:hibernate/SessionFactory">
        
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/computer-database-db</property> 
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">pwd</property>
		        
        <mapping class="com.excilys.computerdb.fconsigny.storage.entity.EntityCompany"/>
        <mapping class="com.excilys.computerdb.fconsigny.storage.entity.EntityComputer"/>

    </session-factory>

</hibernate-configuration>