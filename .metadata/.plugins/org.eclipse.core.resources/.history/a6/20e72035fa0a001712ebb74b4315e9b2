package com.excilys.computerdb.fconsigny.presentation.view.components;

import java.sql.SQLException;
import java.util.List;
import java.util.Map;

import com.excilys.computerdb.fconsigny.business.mapper.ComputerDtoMapper;
import com.excilys.computerdb.fconsigny.business.services.ComputerServices;
import com.excilys.computerdb.fconsigny.presentation.controller.cli.ComputerController;
import com.excilys.computerdb.fconsigny.presentation.dto.ComputerDto;
import com.excilys.computerdb.fconsigny.presentation.dto.IDto;

public class ComputerPage implements IPage<ComputerDto> {

	//Initialize page to 0 by default
	private int currentPage = 0 ;
	private int maxPage;
	private int offset; 
	
	public ComputerPage(int offset){
		this.offset = offset; 
	}
	
	private List<ComputerDto> computerDtoList; 

	public boolean nextPage() {
		if(this.currentPage < maxPage){
			this.currentPage++;
			return true;
		}
		
		return false;
	}
	
	public boolean previousPage(){
		if(this.currentPage > 0){
			this.currentPage--;
			
			return true;
		}
		return false; 
	}

	private void refreshComputerList(){
		ComputerDtoMapper.transformListToDto(new ComputerServices().getAllComputersWithLimiter(name, limit, offset));
	}
}
