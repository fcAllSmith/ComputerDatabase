package com.excilys.computerdb.fconsigny.presentation.view.components;

public interface Page {

	//Initialize page to 0 by default
	private int currentPage = 0 ;
	private int offset = 0; 
	private int maxPage;
	private int limit; 
	
	
	public default void setLimit(int limit){
		this.limit = limit; 
	}
	
	public default void setMaxPage(int maxPage){
		this.maxPage = maxPage;
	}
	
	public default boolean nextPage() {
		if(this.currentPage < maxPage){
			this.currentPage++;
			return true;
		}

		return false;
	}

	public default boolean previousPage(){
		if(this.currentPage > 0){
			this.currentPage--;
			return true;
		}
		return false; 
	}
}
