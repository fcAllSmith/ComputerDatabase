package com.excilys.computerdb.fconsigny.dao;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.Collections;
import java.util.List;

import com.excilys.computerdb.fconsigny.database.DatabaseManager;
import com.excilys.computerdb.fconsigny.model.Computer;

public class ComputerDao {

	public static final String SELECT_ALL_COMPUTERS = "SELECT * FROM computer;";
	public ComputerDao() {
		// TODO Auto-generated constructor stub
	}
	
	public List<Computer> querySelectAll(){
		ResultSet resQuery = new DatabaseManager().queryGet(SELECT_ALL_COMPUTERS);
		List<Computer> computerList = Collections.emptyList();
		try {
			while(resQuery.next()){
				computerList.add(new Computer(resQuery.getInt(1)));
				System.out.println(resQuery.getInt(1));
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			System.out.println("Result null");
		}
		
		return computerList;
	}

}
